# в Codemagic FLUTTER_ROOT уже установлен в окружении
flutter_application_path = File.expand_path('..', __dir__)

# используем podhelper из .ios структуры внутри проекта
load File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

platform :ios, '13.0'
use_frameworks!
use_modular_headers!

target 'Runner' do
  flutter_install_all_ios_pods(flutter_application_path)
end

post_install do |installer|
  flutter_post_install(installer)
end