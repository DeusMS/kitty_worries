platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_application_path = File.expand_path('..', __dir__)
podhelper_path = File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

# Гарантированная проверка — предотвращает CI-крэш
if File.exist?(podhelper_path)
  load(podhelper_path)
else
  puts("⚠️ podhelper.rb не найден: #{podhelper_path}")
end

target 'Runner' do
  use_frameworks! :linkage => :static

  if defined?(install_all_flutter_pods)
    install_all_flutter_pods(flutter_application_path)
  else
    puts "⚠️ install_all_flutter_pods не определён — возможно, podhelper.rb не сгенерирован"
  end
end



