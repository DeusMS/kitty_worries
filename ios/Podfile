platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Абсолютный путь, безопасный в CI
flutter_application_path = File.expand_path('..', __dir__)
podhelper_path = File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

# Только если файл реально существует
if File.exist?(podhelper_path)
  load(podhelper_path)
else
  puts "⚠️ podhelper.rb не найден: #{podhelper_path}. Он будет сгенерирован позже командой flutter build ios"
end

target 'Runner' do
  use_frameworks! :linkage => :static
  
  pod 'Firebase/Core', '10.24.0'
  pod 'Firebase/Auth', '10.24.0'
  pod 'Firebase/Firestore', '10.24.0'
  pod 'Firebase/Messaging', '10.24.0'
  pod 'Firebase/Storage', '10.24.0'

  if defined?(install_all_flutter_pods)
    install_all_flutter_pods(flutter_application_path)
  else
    puts "⚠️ install_all_flutter_pods не определён. podhelper.rb не загружен?"
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['ENABLE_MODULES'] = 'YES'
      config.build_settings['OTHER_SWIFT_FLAGS'] ||= ['$(inherited)', '-Xfrontend', '-enable-experimental-feature', '-Xfrontend', 'AccessLevelOnImport']
    end
  end
end



